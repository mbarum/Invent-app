{
  "name": "masuma-ea-hub",
  "version": "1.0.0",
  "private": true,
  "description": "A production-grade, web-based Point of Sale (POS), inventory management, and shipping sticker generation system for Masuma Autoparts East Africa.",
  "scripts": {
    "dev": "concurrently \"npm:dev:types\" \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:types": "npm run dev --workspace=@masuma-ea/types",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces"
  },
  "workspaces": [
    "frontend",
    "backend",
    "packages/types"
  ],
  "author": "AI Studio",
  "license": "UNLICENSED",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
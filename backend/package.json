{
  "name": "backend",
  "private": true,
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec 'ts-node-dev --respawn --transpile-only src/server.ts'",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "knex migrate:latest --knexfile knexfile.ts",
    "db:seed": "knex seed:run --knexfile knexfile.ts"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "knex": "^3.1.0",
    "mysql2": "^3.9.7",
    "joi": "^17.13.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "google-auth-library": "^9.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "helmet": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "express-rate-limit": "^7.2.0",
    "pino": "^9.1.0",
    "pino-http": "^10.1.0",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.12.11",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.8",
    "@types/cookie-parser": "^1.4.7",
    "@types/nodemailer": "^6.4.15",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "tsconfig-paths": "^4.2.0",
    "nodemon": "^3.1.0"
  }
}
